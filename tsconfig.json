{
  "compilerOptions": {
    "target": "es2017",
    "lib": ["es6"],
    "allowJs": false,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": ".",
    "strict": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "module": "ES6",
    "declaration": true,
    "typeRoots": ["./node_modules/@types", "./src/global"]
  },
  "exclude": ["node_modules", "webpack.config.js", "src/tests/**/*.ts"],
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}
